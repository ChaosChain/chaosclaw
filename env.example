# ChaosClaw Environment Variables
# Copy to .env and fill in your values

# ============================================
# ETHEREUM RPC
# ============================================
# Mainnet RPC URL (required for production)
ETH_MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# Optional: Sepolia for testing
ETH_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY

# Which network to watch (mainnet or sepolia)
CHAOSCLAW_NETWORK=mainnet

# ============================================
# TWITTER/X API
# ============================================
# Get these from https://developer.twitter.com
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=

# ============================================
# CHAOSCLAW CONFIG
# ============================================
# Minimum trust score to announce (0-100)
CHAOSCLAW_MIN_TRUST_SCORE=60

# Polling interval in seconds
CHAOSCLAW_POLL_INTERVAL=60

# Rate limit: max tweets per hour
CHAOSCLAW_MAX_TWEETS_PER_HOUR=10

# Log level (DEBUG, INFO, WARNING, ERROR)
CHAOSCLAW_LOG_LEVEL=INFO

# ============================================
# OPTIONAL: DRY RUN MODE
# ============================================
# Set to "true" to log announcements without posting
CHAOSCLAW_DRY_RUN=false
